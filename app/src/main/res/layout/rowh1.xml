<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="151dp"
        android:layout_height="115dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#d9d9d9"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="306dp"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewCardBottom1"
                android:layout_width="122dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/cardbottom"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/textViewname"
                android:layout_width="68dp"
                android:layout_height="18dp"
                android:layout_alignTop="@+id/viewCardBottom1"
                android:layout_alignEnd="@+id/viewCardBottom1"
                android:layout_alignBottom="@+id/viewCardBottom1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="24dp"
                android:text="Jhon Copper"
                android:textSize="12sp" />

            <TextView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:id="@+id/textViewpicuri"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="133dp" />
            <TextView
                android:id="@+id/textViewdesignaton"
                android:layout_width="71dp"
                android:layout_height="12dp"
                android:layout_alignStart="@+id/viewCardBottom1"
                android:layout_alignTop="@+id/viewCardBottom1"
                android:layout_alignEnd="@+id/viewCardBottom1"
                android:layout_alignBottom="@+id/viewCardBottom1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="47dp"
                android:layout_marginBottom="15dp"
                android:text="UX Designer @ Google"
                android:textSize="6sp" />

            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="40dp"
                android:layout_height="14dp"
                android:layout_alignStart="@+id/viewCardBottom1"
                android:layout_alignTop="@+id/viewCardBottom1"
                android:layout_alignEnd="@+id/viewCardBottom1"
                android:layout_alignBottom="@+id/viewCardBottom1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="78dp"
                android:layout_marginBottom="5dp"
                android:text="Available"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/textViewsessionprice"
                android:layout_width="40dp"
                android:layout_height="8dp"
                android:layout_alignStart="@+id/viewCardBottom1"
                android:layout_alignTop="@+id/viewCardBottom1"
                android:layout_alignEnd="@+id/viewCardBottom1"
                android:layout_alignBottom="@+id/viewCardBottom1"
                android:layout_marginStart="80dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="30dp"
                android:text="$100/session"
                android:textColor="#FFC107"
                android:textSize="6sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>